{
  "expo": {
    "scheme": "ecmidapp",
    "name": "eCMIDApp",
    "slug": "eCMIDApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/img/ecmidlogoblack.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/img/ecmidlogoblack.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e9fd8"
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": false,
      "statusBarStyle": "light-content",
      "statusBarBackgroundColor": "#1e9fd8",
      "splash": {
        "image": "./assets/img/ecmidlogoblack.png",
        "resizeMode": "contain",
        "backgroundColor": "#1e9fd8"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to take photos for claim submissions.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select images for your claims.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save photos to your library.",
        "PHPhotoLibraryPreventAutomaticLimitedAccessAlert": true
      },
      "bundleIdentifier": "com.anonymous.eCMIDApp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/img/ecmidlogoblack.png",
        "backgroundColor": "#1e9fd8"
      },
      "splash": {
        "image": "./assets/img/ecmidlogoblack.png",
        "resizeMode": "contain",
        "backgroundColor": "#1e9fd8"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.eCMIDApp",
      "statusBarStyle": "light-content",
      "statusBarBackgroundColor": "#1e9fd8",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/img/ecmidlogoblack.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1e9fd8"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to attach documents to your claims.",
          "cameraPermission": "The app needs access to your camera to take photos for claim submissions.",
          "saveToPhotosAlbumPermission": "The app needs permission to save photos to your library."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "organization": "vishalapp",
          "project": "react-native"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true
          },
          "ios": {}
        }
      ]
    ],
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "url": "https://sentry.io/",
            "organization": "vishalapp",
            "project": "react-native"
          }
        }
      ]
    }
  }
}